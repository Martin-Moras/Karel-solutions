void addFast()
{
    while(rightIsClear())
    {
        if(beeperAhead() && onBeeper())
        {
            moveForward();
            moveForward();
            
            if(onBeeper())
            {
                moveForward();
                dropBeeper();
                turnRight();
                moveForward();
                turnRight();
                moveForward();
                dropBeeper();
                moveForward();
                moveForward();
                turnAround();
            }
            else
            {
                moveForward();
                turnRight();
                moveForward();
                turnRight();
                moveForward();
                dropBeeper();
                moveForward();
                moveForward();
                turnAround();
            }
        }
        else if(onBeeper() || beeperAhead())
        {
            moveForward();
            moveForward();
            
            if(onBeeper())
            {
                moveForward();
                turnRight();
                moveForward();
                turnRight();
                moveForward();
                dropBeeper();
                moveForward();
                moveForward();
                turnAround();
            }
            else
            {
                moveForward();
                dropBeeper();
                turnRight();
                moveForward();
                turnRight();
                moveForward();
                moveForward();
                moveForward();
                turnAround();
            }
        }
        else
        {
            moveForward();
            moveForward();
            
            if(onBeeper())
            {
                moveForward();
                dropBeeper();
                turnRight();
                moveForward();
                turnRight();
            }
            else
            {
                moveForward();
                turnRight();
                moveForward();
                turnRight();
            }
            moveForward();
            moveForward();
            moveForward();
            turnAround();
        }
    }
}
