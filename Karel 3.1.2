void fetchTheStars()
{
    turnLeft();
    goForward();
    dropBeeper();
    turnLeft(); //nach dropStars
    if(frontIsClear())
    {
        moveForward();
        fetchTheStars();
    }
}

void goForward()
{
    if(frontIsClear())
    {
        moveForward();
        goForward();
        dropStars();
    }
}

void dropStars()
{
    if(onBeeper())
    {
        pickBeeper();
        turnAround();
    }
    moveForward();
}
