void findShelters()
{
    repeat(4)
    {
        if(frontIsClear() && !beeperAhead())
        {
            moveForward();
            
            if((rightIsClear() || frontIsClear() || leftIsClear()) && !onBeeper())
            {
                dropBeeper();
                findShelters();
            }
            turnAround();
            moveForward();
            turnAround();
        }
        turnLeft();
    }
}
