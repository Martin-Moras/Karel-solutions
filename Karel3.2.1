void secureTheCave()
{
    turnLeft();
    goForward();
    colectStalactites();
    turnRight();
    if(frontIsClear()) // nach dropStalagmites
    {
        moveForward();
        secureTheCave();
    }
}

void goForward()
{
    while(frontIsClear())
    {
        moveForward();
    }
    turnAround();
}

void colectStalactites()
{
    pickBeeper();
    moveForward();
    if(onBeeper())
    {
        colectStalactites();
    }
    else
    {
        goForward();
    }
    dropStalagmites();
}

void dropStalagmites()
{
    dropBeeper();
    moveForward();
}
