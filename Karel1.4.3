void walkTheLabyrinth()
{
    repeat(100)
    {
        while(!onBeeper())
        {
            if(frontIsClear())
            {
                moveForward();
            }
            else if(leftIsClear())
            {
                turnLeft();
                moveForward();
            }
            else if(rightIsClear())
            {
                turnRight();
                moveForward();
            }
            else 
            {
                turnAround();
            }
        }
        pickBeeper();
        turnAround();
        moveForward();
        dropBeeper();
        if(frontIsClear())
        {
            moveForward();
        }
        else if(leftIsClear())
        {
            turnLeft();
            moveForward();
        }
        else if(rightIsClear())
        {
            turnRight();
            moveForward();
        }
    }
}
